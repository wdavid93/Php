{# On étend le template de base base.html.twig #}
{% extends 'base.html.twig' %}

{# Début du bloc title, qui sera inséré dans la section titre du template de base #}
{% block title %}
    Boutique en ligne
{% endblock %}

{# Début du bloc body, qui sera inséré dans la section corps du template de base #}
{% block body %}
<div class="d-flex justify-content-evenly card_shop">
{% for product in products %}
  <div class="card">
      {# Affichage de l'image du produit avec une bordure arrondie #}
      <img src="{{ asset('uploads/products/' ~ product.image )}}" class="card-img-top shop_img" alt="Image du produit" style="width: 80%; margin: 10%; border: 1px solid black; border-radius: 50%">
      <div class="card-body">
        {# Nom du produit #}
        <h5 class="card-title">{{ product.name }}</h5>
        {# Description du produit #}
        <p class="card-text">{{ product.description }}</p>
        {# Prix du produit avec sa devise #}
        <p class="card-text">{{ product.price}} {{ product.currency }}</p>
        {# Bouton d'ajout au panier, avec une icône et un texte conditionnel basé sur l'ID du produit #}
        <a href="{% if product.id is same as 1 %}
            {{ path('app_cart_add_formation' , {'id': product.id }) }}
          {% else %}
            {{ path('app_cart_add', {'id' : product.id})}}
          {% endif %}" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart-plus" viewBox="0 0 16 16">
        <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z"/>
        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
        </svg>
        Ajouter au panier
        </a>
      </div>
  </div>
{% endfor %}
</div>
{% endblock %}
