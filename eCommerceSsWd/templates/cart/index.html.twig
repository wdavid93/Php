{% extends 'base.html.twig' %}

{# Début du bloc pour définir le titre de la page #}
{% block title %}
    panier
{% endblock %}

{# Début du bloc principal du corps de la page #}
{% block body %}
    {# Vérifie si le panier contient des articles #}
    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th class="card-text">Produit</th> {# Colonne pour le nom du produit #}
                    <th class="card-text">Prix</th> {# Colonne pour le prix du produit #}
                    <th class="card-text">Quantité</th> {# Colonne pour la quantité du produit #}
                    <th class="card-text">Total</th> {# Colonne pour le total (prix x quantité) #}
                    <th class="card-text">Devise</th> {# Colonne pour la devise #}
                    <th></th> {# Colonne vide pour les actions (ajouter, retirer, supprimer) #}
                </tr>
            </thead>
            <tbody>
                {# Boucle sur chaque article du panier #}
                {% for item in items %}
                    <tr>
                        <td class="card-text">{{ item.product.name }}</td> {# Affiche le nom du produit #}
                        <td class="card-text">{{ item.product.price }}</td> {# Affiche le prix du produit #}
                        <td class="card-text">{{ item.quantity }}</td> {# Affiche la quantité du produit #}
                        <td class="card-text">{{ item.product.price * item.quantity }}</td> {# Calcule et affiche le total pour cet article #}
                        <td class="card-text">{{ item.product.currency }}</td> {# Affiche la devise du produit #}
                        <td>
                            {# Si l'ID du produit n'est pas 1, affiche les boutons d'ajout et de retrait #}
                            {% if item.product.id is not same as 1 %}
                                <a href="{{ path('app_cart_add', {'id': item.product.id })}}" class="btn btn-success">
                                    {# Icône pour ajouter un produit au panier #}
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-cart-plus success bi_cart" viewBox="0 0 16 16">
                                        <path d="M9 5.5a.5.5 0 0 0-1 0V7H6.5a.5.5 0 0 0 0 1H8v1.5a.5.5 0 0 0 1 0V8h1.5a.5.5 0 0 0 0-1H9V5.5z"/>
                                        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                    </svg>
                                </a>
                                <a href="{{ path('app_cart_less', {'id': item.product.id })}}" class="btn btn-warning">
                                    {# Icône pour retirer un produit du panier #}
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-cart-dash btn-warning bi_cart" viewBox="0 0 16 16">
                                        <path d="M6.5 7a.5.5 0 0 0 0 1h4a.5.5 0 0 0 0-1h-4z"/>
                                        <path d="M.5 1a.5.5 0 0 0 0 1h1.11l.401 1.607 1.498 7.985A.5.5 0 0 0 4 12h1a2 2 0 1 0 0 4 2 2 0 0 0 0-4h7a2 2 0 1 0 0 4 2 2 0 0 0 0-4h1a.5.5 0 0 0 .491-.408l1.5-8A.5.5 0 0 0 14.5 3H2.89l-.405-1.621A.5.5 0 0 0 2 1H.5zm3.915 10L3.102 4h10.796l-1.313 7h-8.17zM6 14a1 1 0 1 1-2 0 1 1 0 0 1 2 0zm7 0a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                                    </svg>
                                </a>
                            {% endif %}
                            <a href="{{ path('app_cart_remove', {'id' : item.product.id })}}" class="btn btn-danger">
                                {# Icône pour supprimer un produit du panier #}
                                <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-trash3 btn-danger bi_cart" viewBox="0 0 16 16">
                                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                                </svg>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td class="card-text" colspan="3">Total :</td> {# Affiche le texte "Total" #}
                    <td class="card-text">{{ total }}</td> {# Affiche le total des prix des produits #}
                    <td class="card-text">{{ currency }}</td> {# Affiche la devise utilisée #}
                    <td class="card-text"></td> {# Colonne vide pour l'alignement #}
                </tr>
            </tfoot>
        </table>
        <a href="{{ path('app_buy')}}" class="btn btn-primary">Valider mon panier</a> {# Lien pour valider et acheter le panier #}
    {% else %}
        <p>Votre panier est vide</p> {# Message si le panier est vide #}
    {% endif %}
{% endblock %}
